# Server Configuration
PORT=3005
NODE_ENV=development

# Firebase Admin SDK
# Option 1: Path to service account key JSON file (local development)
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json
# Option 2: JSON string of service account (production / Railway)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Development only - bypass Firebase auth for testing (set to false in production!)
BYPASS_AUTH=true

# Tuya/SmartLife API
TUYA_ACCESS_ID=your_tuya_access_id
TUYA_ACCESS_SECRET=your_tuya_access_secret
TUYA_BASE_URL=https://openapi.tuyaus.com
# EU: https://openapi.tuyaeu.com
# US: https://openapi.tuyaus.com
# CN: https://openapi.tuyacn.com
# IN: https://openapi.tuyain.com
